# --------------------------------------
# settings
# --------------------------------------
set mouse = true
set tab-size = 4
set history-size = 0
set git-colors = false
set ignore-case = true
set split-view-height = 45%
set reference-format = [branch] <tag>

set main-view-date = custom
set main-view-date-format = "%Y-%m-%d %I:%M %p"
set main-view-author = email-user
set main-view-id = yes

set blame-view-date = custom
set blame-view-date-format = "%Y-%m-%d %I:%M %p"
set blame-view-author = email-user

# --------------------------------------
# custom keybindings
# --------------------------------------
bind main w !?git push
bind main ! !?git revert %(commit)

bind status w !?git push
bind status a !?git commit --amend

