# --------------------------------------
# PKGBUILD for swaystatus
# --------------------------------------
pkgname=swaystatus

pkgdesc="'Rust' rewrite of my shell script which is used to populate swaybar"
url="https://gitlab.com/s.blumentritt/swaystatus"

pkgver=0.1.0
pkgrel=2

arch=('x86_64')
license=('MIT')

source=("${pkgname}-${pkgver}.zip::https://gitlab.com/s.blumentritt/${pkgname}/-/jobs/artifacts/v${pkgver}/download?job=linux-musl")
sha512sums=('ee5f747381c6f86420555d27c5152ae9cb6fd526cb25237725309a66ba94724d13193bf2eac77c34c382d402dc2f64128177672b90c8e5109f7c9047d9aa3bc0')

package() {
    install -m755 -D "${srcdir}/target/x86_64-unknown-linux-musl/release/${pkgname}" \
    	"${pkgdir}/usr/local/bin/${pkgname}"
}
