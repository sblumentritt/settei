# --------------------------------------
# PKGBUILD for Pop OS gtk theme
# --------------------------------------
pkgname_=pop-gtk-theme
pkgname=pop-4-gtk-theme

pkgdesc="A GTK+ theme for Pop!_OS"
url="https://github.com/pop-os/gtk-theme"

pkgver=4.0.0
pkgver_=b2
pkgrel=1

arch=('x86_64')
license=('GPL2' 'CCPL')

provides=("${pkgname_}")
conflicts=("${pkgname_}")

depends=('gtk3' 'gtk2' 'gtk-engine-murrine' 'gdk-pixbuf2' 'glib2')
makedepends=('inkscape' 'sassc' 'optipng' 'parallel')

source=("${pkgname_}-${pkgver}.tar.gz::${url}/archive/${pkgver}-${pkgver_}.tar.gz")
sha512sums=('bdd639d8dc2c2d0f6843341ddf388bc0b5e089b9d972db03b0f6cf6e502d69c992980ae7e55f3b9ccfa3520678c0682070510758f37e9bb2da707928e951e0d7')

# configure options to decrease build time
options=('!strip' '!zipman' 'libtool' 'staticlibs')

build()
{
    cd "${srcdir}/gtk-theme-${pkgver}-${pkgver_}"
    make
}

package()
{
    cd "${srcdir}/gtk-theme-${pkgver}-${pkgver_}"
    DESTDIR="${pkgdir}" make install
}
